{% extends "base.html.twig" %}
{% block menu %}{% include("menu2.html.twig") %}{% endblock %}
{% block body %}
    <div class="men">
        <div class="container">
            <div class="col-md-2 sidebar_men">
                <h3>Categories</h3>
                <ul class="product-categories color"><li class="cat-item cat-item-42"><a href="#">Vielles rondes</a> <span class="count">(14)</span></li>
                    <li class="cat-item cat-item-60"><a href="#">2 chanterelles</a> <span class="count">(2)</span></li>
                    <li class="cat-item cat-item-63"><a href="#">3 chanterelles</a> <span class="count">(2)</span></li>
                    <li class="cat-item cat-item-54"><a href="#">4 chanterelles</a> <span class="count">(8)</span></li>
                </ul>
            
            </div>
            <div class="col-md-8 mens_right">
                <div class="dreamcrub">
                    <ul class="breadcrumbs">
                        <li class="home">
                            <a href="index.html" title="Go to Home Page">Home</a>&nbsp;
                            <span>&gt;</span>
                        </li>
                        <li class="home">&nbsp;
                                         Vielles rondes&nbsp;
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                
                <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                    <ul>
                        {% for vielle in vielles %}
                            {% if loop.index is divisible by(2)  %}
                            <li class="last simpleCart_shelfItem">
                                {% else %}
                        <li class="simpleCart_shelfItem">
                        {% endif %}
    
                        <a class="cbp-vm-image" href="catalog/{{ loop.index }}">
                                    <div class="view view-first">
                                        <div class="inner_content clearfix">
                                            <div class="product_image">
                                                <div class="mask1"><img src="{{ asset('assets/images/products/' ~ vielle.photo) }}" alt="image" class="img-responsive zoom-img"></div>
                                                <div class="mask">
                                                    <div class="info">Quick View</div>
                                                </div>
                                                <div class="product_container">
                                                    <h4>{{ vielle.name }}</h4>
                                                    <p>{{ vielle.subcategory.name }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <script src="{{ asset('assets/js/cbpViewModeSwitch.js') }}" type="text/javascript"></script>
                <script src="{{ asset('assets/js/classie.js') }}" type="text/javascript"></script>
            </div>
        </div>
    </div>
    
    {% endblock %}
