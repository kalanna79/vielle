{% extends "base.html.twig" %}
{% block menu %} {{ render(controller('VielleCatalogBundle:Menu:menu', {})) }}{% endblock %}
{% block body %}
 
        <div class="account-in">
            <div class="container">
                <h2>Se connecter</h2>
    
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="col-md-7 account-top">
                    <form action="{{ path('login_check') }}" method="post">
                        <div>
                            <span>Pseudo*</span>
                            <input type="text" id="username" name="_username" value="{% if last_username is defined %} {{ last_username }} {% endif %}" />
                        </div>
                        <div>
                            <span class="pass">Mot de passe*</span>
                            <input type="password" id="password" name="_password" />
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >                        </div>
                        <button type="submit">Connexion</button>
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    
    
    <script src="{{ asset('assets/js/cbpViewModeSwitch.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/classie.js') }}" type="text/javascript"></script>
{% endblock %}
