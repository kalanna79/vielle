{% extends "base.html.twig" %}
{% block menu %}{% include("menu2.html.twig") %}{% endblock %}
{% block body %}
    <div class="men">
        <div class="container">
            <div class="col-md-2 sidebar_men">
                <h3>Categories</h3>
                <ul class="product-categories color">
                    {% for subcategory in subdecors %}
        
                        <li class="cat-item cat-item-54"><a href="{{ path('decorcat', {'id': subcategory.id}) }}">{{
                                subcategory.name
                                }}</a>
                            <span class="count">
                            (
                                {% for key, value in counters %}
                                    {% if key+3 == subcategory.id %}
                                        {{ value }}
                                    {% endif %}
                                {% endfor %}
                            )
                        </span></li>
                    {% endfor %}
                </ul>
            
            </div>
            <div class="col-md-8 mens_right">
                <div class="dreamcrub">
                    <ul class="breadcrumbs">
                        <li class="home">
                            <a href="index.html" title="Go to Home Page">Home</a>&nbsp;
                            <span>&gt;</span>
                        </li>
                        <li class="home">&nbsp;
                            {{ categories.name | capitalize }}
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                
                <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                    <ul>
                        {% for decor in decors %}
                            {% if loop.index is divisible by(2)  %}
                            <li class="last simpleCart_shelfItem">
                                {% else %}
                        <li class="simpleCart_shelfItem">
                        {% endif %}
    
                        <a class="cbp-vm-image" href="catalog/{{ decor.id }}">
                                    <div class="view view-first">
                                        <div class="inner_content clearfix">
                                            <div class="product_image">
                                                <div class="mask1"><img src="{{ asset('assets/images/products/' ~ decor.photo) }}" alt="image" class="img-responsive zoom-img"></div>
                                                <div class="mask">
                                                    <div class="info">Quick View</div>
                                                </div>
                                                <div class="product_container">
                                                    <h4>{{ decor.name }}</h4>
                                                    <p>{{ decor.subcategory.name }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <script src="{{ asset('assets/js/cbpViewModeSwitch.js') }}" type="text/javascript"></script>
                <script src="{{ asset('assets/js/classie.js') }}" type="text/javascript"></script>
            </div>
        </div>
    </div>
    
    {% endblock %}
