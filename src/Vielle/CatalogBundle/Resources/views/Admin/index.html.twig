{% extends "base.html.twig" %}
{% block menu %} {{ render(controller('VielleCatalogBundle:Menu:menu', {})) }}{% endblock %}
{% block body %}
    
    <div class="men">
        <div class="container">
        <h1>Administration</h1>
            <div>
                <a href="{{ path('vielle_catalog_addvielle') }}" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1">Ajouter une vielle</a>
                <a href="{{ path('vielle_catalog_adddecor') }}" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1">Ajouter un décor</a>
            </div>
            <div class="sap_tabs">
                <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                    <ul class="resp-tabs-list">
                        <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Vielles</span></li>
                        <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Décors</span></li>
                    </ul>
                    <div class="resp-tabs-container">
                        <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                            <div class="facts">
                                <ul class="tab_list">
                                    <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                                            {% for vielle in vielles %}
                                                <div class="brand_box">
                                                    <div class="left-side col-xs-12 col-sm-4">
                                                        <img src="{{ vielle.photo.file | imagine_filter
                                                        ('md_thumb') }}" alt="{{ vielle.photo.alt }}"/>
                                                    </div>
                                                    <div class="middle-side col-xs-12 col-sm-4">
                                                        <h4><a href="#">{{ vielle.name }}</a></h4>
                                                        <p>{{ vielle.subcategory.name }}<br>
                                                        {{ vielle.description }}</p>
                                                    </div>
                                                    <div class="right-side col-xs-12 col-sm-4">
                                                        <a href="{{ path('vielle_catalog_edit', {'id': vielle.id}) }}" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1" id="viellemodify{{ vielle.id }}">Modifier</a>
                                                        <a href="{{ path('vielle_catalog_delete', {'id': vielle.id}) }}" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1" id="vielledelete{{ vielle.id }}">Supprimer</a>
                                                    </div>
                                                    <div class="clearfix"> </div>
                                                </div>
                                                
                                            {% endfor %}
                                    <script src="{{ asset('assets/js/cbpViewModeSwitch.js') }}" type="text/javascript"></script>
                                    <script src="{{ asset('assets/js/classie.js') }}" type="text/javascript"></script>
                            </div>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                            <div class="facts">
                                <ul class="tab_list">
                                    <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                                        {% for decor in decors %}
                                            <div class="brand_box">
                                                <div class="left-side col-xs-12 col-sm-4">
                                                    <img src="{{ decor.photo.file | imagine_filter
                                                    ('md_thumb') }}" alt="{{ decor.photo.alt }}"/>
                                                </div>
                                                <div class="middle-side col-xs-12 col-sm-4">
                                                    <h4><a href="#">{{ decor.name }}</a></h4>
                                                    <p>{{ decor.subcategory.name }}<br>
                                                        {{ decor.description }}</p>
                                                </div>
                                                <div class="right-side col-xs-12 col-sm-4">
                                                    <a href="#" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1" id="viellemodify{{ decor.id }}">Modifier</a>
                                                    <a href="#" class="btn btn-primary btn-normal btn-inline btn_form button item_add item_1" id="vielledelete{{ decor.id }}">Supprimer</a>
                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>
        
                                        {% endfor %}
                                       
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
    
    <script src="{{ asset('assets/js/cbpViewModeSwitch.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/classie.js') }}" type="text/javascript"></script>
{% endblock %}
