    <link href="{{ asset('assets/css/megamenu.css') }}" rel="stylesheet" type="text/css" media="all" />
    
    <!-- start menu -->

</head>
<body>
        {% block menu %} {% endblock %}
    {%  for flashMsg in app.session.FlashBag.get('success') %}
        <div class="more alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            
                <div class="alert-success">
                    {{ flashMsg }}
                
            </div>
        </div>
    {% endfor %}
    
    {%  for flashMsg in app.session.FlashBag.get('error') %}
        <div class="more alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            
            <div class="alert-danger">
                {{ flashMsg }}
            
            </div>
        </div>
    {% endfor %}
    
    {% block body %} {% endblock %}
    <div class="footer">
            <div class="copy">
                <p> &copy; 2017 Boudet Luthiers. Tous droits réservés | <a href="{{ path('mentions') }}">Mentions Légales</a></p>
        </div>
    </div>
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="{{ asset("assets/js/personal.js") }}"></script>
        <script src="{{ asset('assets/js/megamenu.js') }}"></script>
        <script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
        <script src="{{ asset('assets/js/easyResponsiveTabs.js') }}" type="text/javascript"></script>
    
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                    width: 'auto', //auto or any width like 600px
                    fit: true   // 100% fit in a container
                });
            });
        </script>
    
    
        <script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
        
    {% endblock %}

</body>
</html>

